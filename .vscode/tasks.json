{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "buildPwa",
      "type": "npm",
      "dependsOn": "buildApi",
      "script": "start",
      "path": "MyNewHome.API/ClientApp/",
      "problemMatcher": []
    },
    {
      "label": "buildApi",
      "command": "dotnet build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/MyNewHome.API"
      }
    },
    {
      "label": "clean",
      "command": "dotnet clean",
      "type": "shell",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/MyNewHome.Functions"
      }
    },
    {
      "label": "build",
      "command": "dotnet build",
      "type": "shell",
      "dependsOn": "clean",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/MyNewHome.Functions"
      }
    },
    {
      "label": "clean release",
      "command": "dotnet clean --configuration Release",
      "type": "shell",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/MyNewHome.Functions"
      }
    },
    {
      "label": "publish",
      "command": "dotnet publish --configuration Release",
      "type": "shell",
      "dependsOn": "clean release",
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/MyNewHome.Functions"
      }
    },
    {
      "type": "func",
      "dependsOn": "build",
      "options": {
        "cwd": "${workspaceFolder}/MyNewHome.Functions/bin/Debug/netcoreapp3.0"
      },
      "command": "host start",
      "isBackground": true,
      "problemMatcher": "$func-watch"
    }
  ]
}
